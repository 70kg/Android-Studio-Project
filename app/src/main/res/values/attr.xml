<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NumberProgressBar">
        <attr name="progress" format="integer" />
        <attr name="max" format="integer" />

        <attr name="progress_unreached_color" format="color" />
        <attr name="progress_reached_color" format="color" />

        <attr name="progress_reached_bar_height" format="dimension" />
        <attr name="progress_unreached_bar_height" format="dimension" />

        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />

        <attr name="progress_text_offset" format="dimension" />

        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="numberProgressBarStyle" format="reference" />
    </declare-styleable>

    <!--popbutton的属性-->
    <declare-styleable name="popupbtn">
        <!-- 正常状态下的背景 -->
        <attr name="normalBg" format="reference" />
        <!-- 按下状态下的背景 -->
        <attr name="pressBg" format="reference" />
        <!-- 正常状态下的图标 -->
        <attr name="normalIcon" format="reference" />
        <!-- 按下状态下的图标 -->
        <attr name="pressIcon" format="reference" />
        <!-- 按钮的padding -->

    </declare-styleable>
    <declare-styleable name="CustomImageView">
        <attr name="titletext" format="string"></attr>
        <attr name="titlecolor" format="color"></attr>
        <attr name="titlesize" format="dimension"></attr>
        <attr name="image" format="reference"></attr>
        <attr name="imageScaleType">
            <enum name="fillXY" value="0"></enum>
            <enum name="center" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="CustomColorCricle">
        <attr name="fristcolor" format="color"></attr>
        <attr name="secondcolor" format="color"></attr>
        <attr name="criclewidth" format="dimension"></attr>
        <attr name="speed" format="integer"></attr>
    </declare-styleable>
    <declare-styleable name="CustomVolumContralBar">
        <attr name="bar_fristcolor" format="color"></attr>
        <attr name="bar_secondcolor" format="color"></attr>
        <attr name="dotcount" format="integer"></attr>
        <attr name="circlewidth" format="dimension"></attr>
        <attr name="splitsize" format="integer"></attr>
        <attr name="bg" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="BinarySlidingMenu">
        <attr name="rightPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="AddTextImageview">
        <attr name="textsize" format="dimension"></attr>
        <attr name="textcolor" format="color"></attr>
        <attr name="textleft" format="dimension"></attr>
        <attr name="texttop" format="dimension"></attr>
        <attr name="text" format="string"></attr>
        <attr name="textgravity">
            <enum name="top_left" value="0"></enum>
            <enum name="top_mid" value="1"></enum>
            <enum name="top_right" value="2"></enum>
            <enum name="mid_left" value="3"></enum>
            <enum name="mid_mid" value="4"></enum>
            <enum name="mid_right" value="5"></enum>
            <enum name="bottom_left" value="6"></enum>
            <enum name="bottom_mid" value="7"></enum>
            <enum name="bottom_right" value="8"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="PullScrollView">
        <attr name="header" format="reference" />
        <attr name="headerHeight" format="dimension" />
        <attr name="headerVisibleHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="RockView">

        <attr name="rockcolor" format="color" />
        <attr name="delaytime" format="integer" />
        <attr name="rockspeed" format="integer" />
    </declare-styleable>

    <declare-styleable name="ArcView">

        <attr name="degree" format="float"/>
        <attr name="arccolor" format="color"/>
        <attr name="incriclecolor" format="color"/>
        <attr name="outcriclecolor" format="color"/>
        <attr name="arcwidth" format="dimension"/>

    </declare-styleable>


    <declare-styleable name="CustomLayout">

        <attr name="isshowrightimage" format="boolean"/>
        <attr name="lefttext" format="string"/>
        <attr name="leftimage" format="reference"/>
        <attr name="hint" format="string"/>
        <attr name="edittext" format="string"/>
        <attr name="righttext" format="string"/>
        <attr name="rightimage" format="reference"/>
        <attr name="lefttextwidth" format="dimension"/>

    </declare-styleable>


    <declare-styleable name="CascadeLayout">
        <attr name="horizontal_spacing" format="dimension" />
        <attr name="vertical_spacing" format="dimension" />
    </declare-styleable>
</resources>